                    <div class="row">
                        <div class="form-group col-12">
                            <label asp-for="@Model.Appointment.FullName" class="form-label">Full Name</label>
                            <input asp-for="@Model.Appointment.FullName" class="form-control" />
                            <span asp-validation-for="@Model.Appointment.FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="@Model.Appointment.Email" class="form-label">Email</label>
                            <input asp-for="@Model.Appointment.Email" type="email" class="form-control" />
                            <span asp-validation-for="@Model.Appointment.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="@Model.Appointment.Phone" class="form-label">Phone</label>
                            <input asp-for="@Model.Appointment.Phone" class="form-control" />
                            <span asp-validation-for="@Model.Appointment.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="@Model.Appointment.AppointmentDate" class="form-label">Date</label>
                            <input asp-for="@Model.Appointment.AppointmentDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="@Model.Appointment.AppointmentDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Appointment.Message" class="form-label">Message</label>
                            <textarea asp-for="@Model.Appointment.Message" class="form-control"></textarea>
                            <span asp-validation-for="@Model.Appointment.Message" class="text-danger"></span>
                        </div>
                        <div class="form-btn col-12">
                            <button class="th-btn btn-fw">BOOK AN APPOINTMENT</button>
                        </div>
                    </div>
                    <p class="form-messages mb-0 mt-3"></p>
                </form>
            </div>
        </div>
    </div>
</div>


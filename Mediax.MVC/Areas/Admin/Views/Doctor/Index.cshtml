@using Mediax.Core.Entites
@model List<Doctor>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Doctor List</h3>
        <a class="btn btn-primary" asp-action="Create" asp-controller="Doctor">Create New Doctor</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Full Name</th>
                <th>Specialization</th>
                <th>Department</th>
                <th>Created Time</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int count = 1;
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>
                            <img width="60px" height="60px" src="~/doctors/imgs/@doctor.ImageUrl" alt="Doctor Image" />
                        </td>
                        <td>@doctor.FullName</td>
                        <td>@doctor.Specialization</td>
                        <td>@doctor.Department?.Name</td>
                        <td>@doctor.CreatedTime.ToString("dd-MM-yyyy HH:mm")</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@doctor.Id">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@doctor.Id"
                               onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</a>
                        </td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No doctors found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

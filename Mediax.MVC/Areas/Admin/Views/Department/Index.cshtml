@using Mediax.Core.Entites

@model List<Department>

<div class="container">
    <div>
        <h3>Department List</h3>
        <a class="btn btn-primary" asp-action="Create" asp-controller="Department">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">CreatedTime</th>
                <th colspan="2" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.CreatedTime</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Department" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
